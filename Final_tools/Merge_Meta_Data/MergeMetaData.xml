<tool id="MergeMetaData" name="Merge Meta Data" version="0.1.0" python_template_version="3.5">
	<description> Merge Metadata with a dataframe </description>
    <requirements>
      <requirement type="package" version="0.24.2">pandas</requirement>
    </requirements>

    <command detect_errors="exit_code"><![CDATA[
        python '$__tool_directory__/MergeMetaData.py' -D '$input1' -M '$input2' -R '$pera' -O '$output1'
    ]]></command>

    <inputs>
     <param type="data" name="input1" format="tabular" />
     <param type="data" name="input2" format="tabular" />
     <param name="pera" type="select" label="pera" >
      <option value="yes" selected="true">yes</option>  
      <option value="no">no</option>
     </param>
    </inputs>

    <outputs>
        <data name='output1' format='tabular' label="1.tsv" />  
    </outputs>

    <tests>
        <test>
            <param name="input1" value="1.tsv"/>
            <output name="output1" file="1.tsv" />
        </test>
    </tests>
    
    <help><![CDATA[
usage: TransFormDF.py [-h] -I IN_FILE -O OUT_FILE

optional arguments:
  -h, --help            show this help message and exit
  -I IN_FILE, --in_file IN_FILE
                        Path to target tsv file
  -O OUT_FILE, --Out_file OUT_FILE
                        Path to target tsv file
    ]]></help>
