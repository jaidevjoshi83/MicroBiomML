<tool id="merge_dataframe" name="merge_dataframe" version="0.1.0" python_template_version="3.5">
    <requirements>
      <requirement version="0.24.2" package="pandas" >pandas </requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        python $__tool_directory__/concate_data_frame.py '$input1' '$output1'
    ]]></command>
    <inputs>
        <param type="data" name="input1" format="tsv" multiple="true" />
    </inputs>
    <outputs>
        <data name='output1' format='tsv' label="merged.tsv" />    
    </outputs>
    <tests>
        <test>
            <param name="input1" value="1.tsv,2.tsv,3.tsv"/>
            <output name="output1" file="merge.tsv" />
        </test>
    </tests>
    <help><![CDATA[
        usage: Concate_data_frame.py Infile1.tsv,Infile_2.tsv,Infile_3.tsv Merged_out.tsv 
    ]]></help>
